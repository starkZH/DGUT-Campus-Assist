page{
  width: 100%;
  height: 100%;
  background: #E9E9E9;
}
.panel{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 3%;
  margin-left: 0%;
  box-shadow:0px 1px 1px gray;
  background-color: white;
}
.img{
  width: 40%;
  height: 100%
}
.detail{
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 100%;
  margin-left: 5%;
}
.name{
  margin-top: 3%;
  width: 100%;
}
.author,.publish,.isbn{
  margin-top: 2%;
  color: gray;
  width: 100%;
}
.menu{
  display: flex;
  flex-direction: row;
  height: 30%;
  margin-top: 2%;
  width: 100%;
}
.sub{
  box-shadow: 0px 0px 3px gray;
  display: flex;
  flex-direction: row;
  width: 50%;
  height: 40%;
  text-align: center;
}
.text{
  text-align: center;
  margin-left: 5%;
  margin-top: 1%
}
.icon{
  margin-left: 20%;
  width: 24px;
  height: 24px;
}
.control{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 1px;
  width: 100%;
}