page{
  width: 100%;
  height: 100%;
}
.panel{
margin-top: 5%;
margin-left: 5%;
width: 90%;
display: flex;
flex-direction: column;
box-shadow: 0px 0px 10px gray;
}
.title{
  margin-top: 3%;
  color: gray;
  display: flex;
  flex-direction: row;
}
.detail{
  display: flex;
  flex-direction: row;
}
.titleitem,.detailitem{
text-align: center;
  width: 20%;
  margin-left: 2%;
}
.tip{
  color: #1E90FF;
  text-align: center;
  margin-top: 20%;
width: 100%;
}
.name{
  margin-top: 2%;
  margin-left: 2%;
}