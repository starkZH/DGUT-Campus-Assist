page{
  width: 100%;
  height: 100%;
}
.base{
width: 100%;
height: 20%;
position: relative;
}
.bgImage{
width: 100%;
height: 100%;
position: absolute;
top: 0px;
z-index: -100
}
.name,.count{
  color: white;
  width: 100%;
  text-align: center;
  position: absolute;
}
.name{
  margin-top: 5%;
  font-size: 50rpx;
}
.count{
  margin-top: 15%;
  font-size: 36rpx;
}
.list{
  display: flex;
  flex-direction: column;
}
.item{
  margin-top: 3%;
  border: 1px solid lightgray;
  border-bottom: 2px solid gray;
  margin-left: 5%;
  width: 90%;
  display: flex;
  flex-direction: column;
}
.bookName{
font-size: 32rpx;
  margin-left: 2%;
}
.bookNumber{
font-size: 28rpx;
color: gray;
  margin-left: 2%;
}
.date{
text-align: right;
color: gray;
font-size: 28rpx;
margin-right: 2%;
width: 100%;
}